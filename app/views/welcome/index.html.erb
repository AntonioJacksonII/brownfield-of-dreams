<body>
  <section class="tutorials col md-col-8">
    <% @tutorials.each do |tutorial| %>
    <div class="tutorial">
      <a href= <%= tutorial_path(tutorial) %> >
      <img class="thumbnail col md-col-3" src= <%= "#{tutorial.thumbnail}" %> >
      </a>
      <div class="tutorial-description col md-col-9">
        <h4 class="tutorial-title-home"><%= link_to tutorial.title, tutorial_path(tutorial) %> </h4>
        <p class="description"><%= tutorial.description %></p> <br>
        <% if current_user != nil && current_user.admin?  %>
        <div class="edit-tutorial<%=tutorial.id %>">
          <%= link_to 'Edit Tags', edit_admin_tutorial_path(tutorial), class: "btn btn-outline mb1 teal"  %>
        </div>
        <% end %>
      </div>
    </div> <br>
    <% end %>
    <hr>
    <br>
    <div class="paginater">
      <%= will_paginate @tutorials %>
    </div>
  </section>
  <aside class="categories col md-col-4">
    <h1>Filters:</h1>
    <hr>
    <div class="tags">
        <% tag_cloud Tutorial.tag_counts, %w[.m] do |tag, css_class| %>
      <ul>
        <li>
          <%= link_to tag.name, tag_path(tag.name), class: css_class, class: "btn btn-primary mb1 bg-teal"  %>
        </li>
      </ul>
      <% end %>
    </div>
    <hr>
    <%= link_to "Reset", root_path, class: "btn btn-outline mb1 aqua"  %>
  </aside>
</body>
