<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>
  <section class='github'>
    <h1>Github</h1>
      <% @repos.each do |repo| %>
      <div class='repo'>
        <li> <%= link_to "#{repo[:name]}", "#{repo[:html_url]}", class: 'repo-link' %> </li>
      </div>
      <% end %>
  </section>
  <section class ='followers'>
    <h1>Followers</h1>
    <% @followers.each do |follower| %>
    <div class='follower'>
      <li> <%= link_to "#{follower.login}", "#{follower.html_url}", class: 'follower-link' %></li>
    </div>
    <% end %>
  </section>
  <section class ='following-group'>
    <h1>Following</h1>
    <% @following.each do |following| %>
    <div class='following-individual'>
      <li> <%= link_to "#{following.login}", "#{following.html_url}", class: 'following-link' %></li>
    </div>
    <% end %>
  </section>
</section>
